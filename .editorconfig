# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# YAML does not allow tabs
[*.yaml]
indent_style = space
# List items break in vscode with 4 spaces
indent_size = 2
